<%@page_title='News and Events'%>

<div style="clear:both;">
	<% @news.each do |n|%>
		<div style="height:210px;width:210px; float:left;">
			<div class="hero-unit" style="padding:0px;background:#9C9;width:180px;margin-top:5px;float:left;margin-right:20px;">
				<p class="btn" style="background:#09F;color:#fff;width:155px;"><%= n.title %></p>
				<p style="padding:5px;">
				<% if n.description.length > 100 %>
					<%= truncate(n.description, :length=>100, :omission=>'...') %>
					<%= link_to_function 'Read More', "$(this).parent().html('#{escape_javascript n.description}')" %>
				<% else %>
					<%= n.description %>
				<%end%>	
			
				</p>
			</div>
		</div>
	<%end%>
</div>
<div style="clear:both;">
<p><%= will_paginate @news %></p>
</div>