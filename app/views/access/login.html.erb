<div class="depot_form" >
<% @page_title='User|Login'%>

	<% if notice %>
		<div id="error_explanation">
		<%= notice %>
		</div>
	<% end %>

			<h3>Please Log In</h3>
	<%= form_tag(:controller=>'access',:action=>'create') do %>
		<fieldset>
			
			<div>
				<label for="name" >Username:</label>
				<%= text_field_tag :name %>
			</div>
			
			<div>
				<label for="password" >Password:</label>
				<%= password_field_tag :password %>
			</div>

			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>
</div>