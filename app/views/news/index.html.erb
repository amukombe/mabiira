<%@page_title='News & Events List'%>
<div>
  <%= link_to 'New News', new_news_path %>
</div>
<table  class="table table-striped" style="font-size:14px;width:auto;">
  <tr>
    <th>Title</th>
    <th>Submitted date</th>
    <th>Action</th>
  </tr>

<% @news.each do |news| %>
  <tr style="background:#ccc;">
    <td><%= news.title %></td>
    <td><%= news.created_at %></td>
    <td><%= link_to 'Show', news %> |
      <%= link_to 'Edit', edit_news_path(news) %> |
      <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<p><%= will_paginate @news %></p>